            <Button.Background>
                <ImageBrush ImageSource="image/cross_icon_160913.ico"/>
            </Button.Background>
        </Button>
        <MediaElement x:Name="autdown" MediaEnded="gif_MediaEnded" UnloadedBehavior="Manual" LoadedBehavior="Play" Stretch="Fill"
