            <MediaElement.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-33.507"/>
                    <TranslateTransform/>
                </TransformGroup>
            </MediaElement.RenderTransform>
        </MediaElement>
        <Button Content="Создать" HorizontalAlignment="Left" Margin="218,293,0,175" VerticalAlignment="Center" Width="95" FontFamily="Times New Roman" />
