                    <TranslateTransform/>
                </TransformGroup>
            </MediaElement.RenderTransform>
        </MediaElement>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="97,293,0,0" VerticalAlignment="Top" Width="96" RenderTransformOrigin="-0.031,1.906" FontFamily="Times New Roman" Click="CancelButton"/>
    </Grid>

</Window>
